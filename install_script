#!/bin/bash
#
uefi_mode=$(ls /sys/firmware/efi/efivars);
# echo $uefi_mode;

echo "+-------------------------------------+";
echo "|   ArchLinux Install script by S1L   |";
echo "+-------------------------------------+";
echo "|   BASE - UEFI - GRUB - pt.PT        |";
echo "+-------------------------------------+";
echo "+----------------------------------------------------------------------------------+";
echo "| timedatectl set-ntp true                                                         |";timedatectl set-ntp true;
echo "+----------------------------------------------------------------------------------+";
echo "| Select disk to install!                                                          |";lsblk;
echo "+----------------------------------------------------------------------------------+";
echo "   > ";read disk;cgdisk /dev/$disk;
echo "+----------------------------------------------------------------------------------";
